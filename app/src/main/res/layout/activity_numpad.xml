<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#17171C"
    tools:context=".numpad">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">

        <!--앱 바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/ico_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ico_chevron_left"
                app:tint="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:text="토스뱅크 송금"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <!--~에서-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="내 토스뱅크 통장"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="20dp"
                    android:textColor="@color/gray10"
                    android:textStyle="bold"
                    android:text="에서"/>

            </LinearLayout>

            <!--~에서 잔액-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="14dp"
                    android:textColor="@color/gray20"
                    android:textStyle="bold"
                    android:text="잔액"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="14dp"
                    android:textColor="@color/gray10"
                    android:textStyle="bold"
                    android:text="1,000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="14dp"
                    android:textColor="@color/gray20"
                    android:textStyle="bold"
                    android:text="원"/>

            </LinearLayout>

            <!--~로-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="내 토스증권 계좌"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="20dp"
                    android:textColor="@color/gray10"
                    android:textStyle="bold"
                    android:text="로"/>

            </LinearLayout>

            <!--~로 잔액-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="14dp"
                    android:textColor="@color/gray20"
                    android:textStyle="bold"
                    android:text="토스증권 12345566798"/>

            </LinearLayout>

            <!--금액 인풋-->
            <TextView
                android:id="@+id/num_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textColor="@color/gray20"
                android:textSize="28dp"
                android:fontFamily="@font/pretendard_bold"
                android:text="얼마나 옮길까요?"/>

            <!--잔액 입력-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/st_btn_small">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:textColor="@color/gray10"
                    android:textSize="14dp"
                    android:text="잔액 ⋅ 1,000원 입력"/>

            </LinearLayout>

            <!--숫자 클릭-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:gravity="bottom"
                android:orientation="vertical">

                <!--1줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--1-->
                    <LinearLayout
                        android:id="@+id/num_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray10"
                            android:textSize="32dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="1"/>

                    </LinearLayout>
                    <!--2-->
                    <LinearLayout
                        android:id="@+id/num_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray10"
                            android:textSize="32dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="2"/>

                    </LinearLayout>
                    <!--3-->
                    <LinearLayout
                        android:id="@+id/num_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray10"
                            android:textSize="32dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="3"/>

                    </LinearLayout>

                </LinearLayout>

                <!--2줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--4-->
                    <LinearLayout
                        android:id="@+id/num_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray10"
                            android:textSize="32dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="4"/>

                    </LinearLayout>
                    <!--5-->
                    <LinearLayout
                        android:id="@+id/num_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray10"
                            android:textSize="32dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="5"/>

                    </LinearLayout>
                    <!--6-->
                    <LinearLayout
                        android:id="@+id/num_6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray10"
                            android:textSize="32dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="6"/>

                    </LinearLayout>

                </LinearLayout>

                <!--3줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--7-->
                    <LinearLayout
                        android:id="@+id/num_7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray10"
                            android:textSize="32dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="7"/>

                    </LinearLayout>
                    <!--8-->
                    <LinearLayout
                        android:id="@+id/num_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray10"
                            android:textSize="32dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="8"/>

                    </LinearLayout>
                    <!--9-->
                    <LinearLayout
                        android:id="@+id/num_9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray10"
                            android:textSize="32dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="9"/>

                    </LinearLayout>

                </LinearLayout>

                <!--4줄-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--00-->
                    <LinearLayout
                        android:id="@+id/num_00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray10"
                            android:textSize="32dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="00"/>

                    </LinearLayout>
                    <!--0-->
                    <LinearLayout
                        android:id="@+id/num_0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray10"
                            android:textSize="32dp"
                            android:fontFamily="@font/pretendard_regular"
                            android:text="0"/>

                    </LinearLayout>
                    <!--지우기-->
                    <LinearLayout
                        android:id="@+id/num_clear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:layout_weight="1">

                        <ImageView
                            android:layout_width="28dp"
                            android:layout_height="44dp"
                            android:src="@drawable/ico_arrow_left"
                            app:tint="@color/gray10"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>